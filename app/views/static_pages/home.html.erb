<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<%= form_tag(root_path, method: :get) do %>
  <%= label_tag 'Search By ID' %>
  <br>
  <%= text_field_tag :user_id %>
  <%= submit_tag 'Load my Photos' %>
<% end %>

<% if params[:user_id] %>
	<%= @user_id %> 
<% end %>	


<h2><%= link_to "Home", root_path %></h2>
<% if @photostream %>
    <%= link_to 'Photostream', FlickRaw.url_photostream(@photostream[0]) =%>
    <% @photostream.each do |image| %>
    <div class = "image">
      <%= image_tag FlickRaw.url_n(image) =%>
<% end %>
<h2><%= link_to "Home", root_path %></h2>