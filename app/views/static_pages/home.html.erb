<h1>Flickr feed</h1>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :flickr_id, '',placeholder: 'Flickr User Id' %>
    <%= submit_tag 'Get Photos', class: 'btn btn-primary' %>
    <% end %>
  </div>

</div>

<br>
<%= render partial: 'image', collection: @photos, as: :photo %>